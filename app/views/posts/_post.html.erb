<article id="<%= dom_id post %>" class="media">
  <figure class="media-left">
    <p class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/128x128.png">
    </p>
  </figure>
  <div class="media-content">
    <div class="content">
      <p>
        <strong><%= post.user.name %></strong>
        <br>
        <%= post.body %>
        <br>
        <small><a>Like</a> · <a>Reply</a> · <%= time_ago_in_words(post.created_at) %> ago</small>
      </p>
    </div>
  </div>
</article>