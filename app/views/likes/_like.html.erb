<% like = current_user.likes.find_by(likeable: likeable) %>
<% if like.nil? %>
  <%= link_to "Like", likes_path(like: {likeable_id: likeable.id, likeable_type: likeable.class.to_s }), data: { "turbo-method": :post } %>
<% else %>
  <%= link_to "Unlike", like_path(like), data: { "turbo-method": :delete } %>
<% end %>