<article id="<%= dom_id comment %>" class="media">
  <figure class="media-left">
    <p class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/128x128.png">
    </p>
  </figure>
  <div class="media-content">
    <div class="content">
      <p>
        <strong><%= comment.user.name %></strong>
        <br>
        <%= comment.body %>
        <br>
        <small><%= pluralize(comment.likes.count, 'like') %> Â· <%= time_ago_in_words(comment.created_at) %> ago</small>
        <br>
        <small><%= render partial: 'likes/like', locals: { likeable: comment } %></small>
      </p>
    </div>
  </div>
</article>